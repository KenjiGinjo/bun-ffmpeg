{
  "name": "bun-ffmpeg",
  "version": "0.1.3",
  "description": "API to FFMPEG (http://www.ffmpeg.org)",
  "keywords": [
    "ffmpeg",
    "bun"
  ],
  "bugs": {
    "url": "https://github.com/KenjiGinjo/bun-ffmpeg/issues",
    "mail": "kenjiginjo@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/KenjiGinjo/bun-ffmpeg.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "!src/**/*.test.ts",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "scripts": {
    "commit": "cz",
    "format": "prettier --check ./src/**/*.ts",
    "format:fix": "prettier --write ./src/**/*.ts",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "release": "release-it",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "^1.1.3",
    "codestilo": "^0.0.4",
    "codestilo-ts": "0.0.1",
    "commitizen": "^4.3.0",
    "release-it": "^17.4.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    }
  }
}
